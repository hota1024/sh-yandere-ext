{

  "manifest_version": 2,
  "name": "Yanderetter",
  "version": "1.0",
  "description": "Adds a solid red border to all webpages matching mozilla.org.",
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["dist/cjs/index.js"],
			"run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "src/ui/ui.html"
  },
	"permissions": [
    "tabs",
    "storage",
    "activeTab",
    "background",
		"webRequest",
    "*://*/*"
  ]
}
